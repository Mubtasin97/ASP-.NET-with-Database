@model IEnumerable<Manager.Models.viwRegistration>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registration List</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/app.js"></script> 
    <style>
        .sidebar { height: 100vh; background: #f8f9fa; }
        .header { background: #343a40; color: white; }
    </style>
</head>
<body>
    <div class="header p-3">
        <h1>Admin Panel</h1>
    </div>
    <div class="d-flex">
        <div class="sidebar col-md-2 p-3">
            <ul class="nav flex-column">
                <li class="nav-item"><a class="nav-link" href="#">Home</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Registrations</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Payments</a></li>
                <li class="nav-item"><a class="nav-link" href="#create">Create Registration</a></li>
            </ul>
        </div>
        <div class="col-md-10 p-3">
            <h2>Registration List</h2>
            <input type="text" id="search" class="form-control mb-3" placeholder="Search by Name or Email">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th><a href="#" onclick="sortTable('Sl')">ID</a></th>
                        <th><a href="#" onclick="sortTable('pName')">Name</a></th>
                        <th><a href="#" onclick="sortTable('eMail')">Email</a></th>
                        <th><a href="#" onclick="sortTable('dRegistrationDate')">Date</a></th>
                        <th><a href="#" onclick="sortTable('vCourseName')">Course</a></th>
                        <th>Fees</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody id="registrationTable">
                    
                </tbody>
            </table>

            <h3 id="create">Create New Registration</h3>

            @using (Html.BeginForm("Create", "Registrations", FormMethod.Post, new { id = "registrationForm" }))
            {
                <text>
                    <div class="form-group">
                        <label>Personeel</label>
                        <select id="iPersoneelSL" name="iPersoneelSL" class="form-control" ></select>
                    </div>
                    <div class="form-group">
                        <label>Announcement</label>
                        <select id="iAnnouncementSL" name="iAnnouncementSL" class="form-control" ></select>
                    </div>
                    <div class="form-group">
                        <label>Course</label>
                        @Html.TextBox("vCourseName", null, new { @class = "form-control", required = "required" })
                    </div>
                    <div class="form-group">
                        <label>Fees</label>
                        @Html.TextBox("iFees", null, new { @class = "form-control", required = "required", placeholder = "Please enter amount in number" })
                    </div>
                    <div class="form-group">
                        <label>Payment Method</label>
                        @Html.TextBox("sPaymentMethod", null, new { @class = "form-control", placeholder = "e.g. bkash, nagad, cash" })
                    </div>
                    <div class="form-group">
                        <label>Payment Type</label>
                        @Html.TextBox("vPaymentType", null, new { @class = "form-control" ,placeholder = "e.g. Cash / Online"})
                    </div>
                    <div class="form-group">
                        <label>Transaction ID</label>
                        @Html.TextBox("vTrxID", null, new { @class = "form-control", placeholder = "e.g. CGF4OFP93U" })
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </text>
            }
        </div>
    </div>
</body>
</html>
